<h1>Salas Cadastradas</h1>

<div class="modulo">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Descrição</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= room.description %></td>
          <td><%= link_to 'Visualizar', room %></td>
          <td><%= link_to 'Editar', edit_room_path(room) %></td>
          <td><%= link_to 'Remover', room, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

